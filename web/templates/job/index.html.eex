<% organization = @conn.assigns[:organization] %>
<section class="section">
  <div class="section-description">
    <h4>Job Board</h4>
    <p>
      Find <%= organization.titles %> jobs local to <%= organization.city %>.
    </p>
    <p>Jobs are free to post, and will stay online for 30 days.</p>
    <%= link(
      {:safe, "&larr; Back to Home"},
      to: root_path(@conn, :show),
      class: "appended-link"
    ) %>
    <hr>
    <%= link(
      "Post a job for free",
      to: job_path(@conn, :new),
      class: "button section-description-action"
      ) %>
  </div>

  <div class="section-content">
    <%= render "job_list.html", jobs: @jobs, conn: @conn %>
  </div>
</section>
