<%= form_for @changeset, @path, [class: "section-content"], fn form -> %>
  <%= render Community.SharedView, "_form_errors.html", form: @changeset %>

  <%= input form, :name, label_text: "Name" %>
  <%= input form, :title, placeholder: "UI designer at Facebook" %>
  <%= input form, :twitter_handle %>
  <%= input form, :dribbble_username %>
  <%= input form, :website, placeholder: "http://example.com" %>

  <fieldset>
    <legend>Available for hire?</legend>
    <%= label form, :available_for_hire, class: "checkbox-label" do %>
      <%= checkbox form, :available_for_hire %>
      <span>Yes, let people contact me for work inquiries.</span>
    <% end %>
  </fieldset>

  <%= label form, :email, "Email Address" %>
  <div class="gravatar-group">
    <img class="gravatar-group-image" data-javascript="gravatar-display"></img>
    <%= text_input form, :email, data: [javascript: "gravatar-email"],
    class: "gravatar-group-input" %>
  </div>
  <p class="notation gravatar-help-text">
    This will not be displayed publicly, and will only be use to manage your
    profile. Your avatar is pulled from <a
      href="https://en.gravatar.com/" target="_blank">Gravatar</a>.
  </p>

  <%= submit "Save your profile", data: [role: "member-save" ] %>
<% end %>
